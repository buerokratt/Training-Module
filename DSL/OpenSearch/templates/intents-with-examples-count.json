{
  "script": {
    "lang": "mustache",
    "source": {
      "size": 0,
      "aggs": {
        "hot": {
          "terms": {
            "field": "intent",
            "size": 10000
          },
          "aggs": {
            "examples_counts": {
              "value_count": {
                "field": "examples"
              }
            }
          }
        }
      },
      "query": {
        "prefix": {
          "intent": {
            "value": "{{prefix}}"
          }
        }
      }
    },
    "params": {
      "prefix": {
        "type": "string",
        "description": "Optional prefix to filter intents"
      }
    }
  }
}
