{
    "form": {
        "name":"{{name}}",
        "required_slots": [
            {{#each  details.requiredSlots }}
                "{{slot_name}}"{{#unless @last}},{{/unless}}
            {{/each}}
        ],
        "ignored_intents": [
            {{#each  details.ignoredIntents }}
                "{{this}}"{{#unless @last}},{{/unless}}
            {{/each}}
        ]
    },
    "responses": {
        "response": "{{ details.formResponse }}",
        "questions": [
            {{#each details.requiredSlots }}
                {
                "slot_name": "{{ slot_name }}",
                "question": "{{ question }}"
                }{{#unless @last}},{{/unless}}
            {{/each}}
        ]
    }
}