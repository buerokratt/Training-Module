{
{{#if hits}}
    "id": "{{hits.0._id}}",
    "rule": "{{hits.0._source.rule}}",
    "steps": [
    {{#each hits.0._source.steps as |step|}}
        {
        {{#each step}}
            {{#if (eq @key "entities")}}
                "{{@key}}": [
                {{#each this}}
                    {{#with this as |entity|}}
                        {{#each entity}}
                            {
                            "{{@key}}": "{{this}}"
                            }{{#unless @last}},{{/unless}}
                        {{/each}}
                    {{/with}}
                    {{#unless @last}},{{/unless}}
                {{/each}}
                ]{{#unless @last}},{{/unless}}
            {{else if (eq @key "slot_was_set")}}
                "{{@key}}": {{{ toJSON this }}} {{#unless @last}},{{/unless}}
            {{else if (eq @key "condition")}}
                "{{@key}}": [
                {{#each this}}
                    {
                    {{#with this as |condition|}}
                        {{#each condition}}
                            {{#if (eq @key "slot_was_set")}}
                                "{{@key}}": {{{ toJSON this }}} {{#unless @last}},{{/unless}}
                            {{else}}
                                "{{@key}}": "{{this}}"{{#unless @last}},{{/unless}}
                            {{/if}}
                        {{/each}}
                    {{/with}}
                    }{{#unless @last}},{{/unless}}
                {{/each}}
                ]{{#unless @last}},{{/unless}}
            {{else}}
                "{{@key}}": "{{this}}"{{#unless @last}},{{/unless}}
            {{/if}}
        {{/each}}
        }{{#unless @last}},{{/unless}}
    {{/each}}
    ]
{{/if}}
}
