{
{{#if hits}}
  "rule": "{{hits.0._source.rule}}",
 "steps": [
 {{#each hits.0._source.steps as |step|}}
   {
       {{#if step.user}}
       "user": "{{step.user}}"
       {{/if}}
       {{#if step.intent}}
       "intent": "{{step.intent}}"
       {{/if}}
       {{#if step.action}}
       "action": "{{step.action}}"
       {{/if}}
       }{{#unless @last}},{{/unless}}
   {{/each}}
 ]
{{/if}}
}
